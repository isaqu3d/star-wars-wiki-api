{
  "name": "star-wars-wiki-api",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "dev": "ts-node-dev --respawn --transpile-only src/server.ts",
    "build": "tsc",
    "start": "node dist/server.js",
    "deploy": "pnpm db:migrate && pnpm start",
    "seed:prod": "node dist/database/seeds/seed.js",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix",
    "format": "prettier --write \"src/**/*.ts\"",
    "format:check": "prettier --check \"src/**/*.ts\"",
    "type-check": "tsc --noEmit",
    "security:audit": "npm audit",
    "db:migrate": "drizzle-kit migrate",
    "db:generate": "drizzle-kit generate",
    "db:studio": "drizzle-kit studio",
    "db:seed": "ts-node src/database/seeds/seed.ts",
    "db:seed-images": "ts-node -r dotenv/config src/database/seeds/seed-images.ts",
    "docker:test:up": "docker-compose -f docker-compose.test.yml up -d",
    "docker:test:down": "docker-compose -f docker-compose.test.yml down",
    "docker:test:logs": "docker-compose -f docker-compose.test.yml logs -f",
    "db:test:setup": "chmod +x scripts/setup-test-db-docker.sh && scripts/setup-test-db-docker.sh",
    "db:test:teardown": "chmod +x scripts/teardown-test-db.sh && scripts/teardown-test-db.sh",
    "db:test:migrate": "dotenv -e .env.test -- drizzle-kit migrate",
    "test:integration": "pnpm docker:test:up && sleep 3 && pnpm db:test:setup && pnpm test",
    "test": "vitest",
    "test:watch": "vitest --watch",
    "test:coverage": "vitest --coverage",
    "test:ui": "vitest --ui"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@aws-sdk/client-s3": "^3.884.0",
    "@fastify/cors": "^10.0.1",
    "@fastify/helmet": "^12.0.1",
    "@fastify/jwt": "^10.0.0",
    "@fastify/rate-limit": "^10.1.1",
    "@fastify/static": "^8.2.0",
    "@fastify/swagger": "^9.5.1",
    "@fastify/swagger-ui": "^5.2.3",
    "axios": "^1.11.0",
    "bcrypt": "^6.0.0",
    "dotenv": "^17.2.2",
    "drizzle-kit": "^0.31.4",
    "drizzle-orm": "^0.44.5",
    "drizzle-orm-pg": "^0.16.3",
    "fastify": "^5.6.0",
    "fastify-swagger": "^5.2.0",
    "fastify-type-provider-zod": "^6.0.0",
    "pg": "^8.16.3",
    "pino-pretty": "7.0.0",
    "zod": "^4.1.5"
  },
  "devDependencies": {
    "@faker-js/faker": "^10.1.0",
    "@types/bcrypt": "^6.0.0",
    "@types/node": "^24.3.1",
    "@types/pg": "^8.15.5",
    "@types/supertest": "^6.0.3",
    "@vitest/coverage-v8": "^4.0.6",
    "@vitest/ui": "^4.0.6",
    "eslint": "^9.35.0",
    "prettier": "^3.6.2",
    "supertest": "^7.1.4",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.9.2",
    "vitest": "^4.0.6"
  }
}
